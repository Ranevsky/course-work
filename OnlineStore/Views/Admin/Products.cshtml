@model OnlineStore.Models.ViewModel.AdminProducts
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>Products</h1>
<style>
    .btn a {
        margin-left: 3px;
    }
</style>
<table class="table">
    <thead>
    <tr>
        <td>Name</td>
        <td>Owner</td>
        <td>Actions</td>
    </tr>
    </thead>
    <tbody>
    @foreach (var i in Model.Products)
    {
        <tr>
            <td>
                <a href="/product/@i.Id">@i.Name</a>
            </td>
            <td>
                @i.CreatorUser.Surname @i.CreatorUser.Name
            </td>
            <td>
                @* @Html.ActionLink("Remove", "RemoveProduct", "Api", new {id=i.Id, red}, new {@class="btn btn-dark"}) *@

                <a class="btn btn-dark" href="/api/product/remove/@i.Id?redirect=@Context.Request.Path">Remove</a>
                <a class="btn btn-info" href="/product/edit/@i.Id">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<div class="container">
    @Html.ActionLink("New", "EditProduct", "Product", new {id = -10}, new {@class="btn btn-outline-success"})
    @Html.ActionLink("Import/Export", "Index", "ImportExport", null, new {@class="btn btn-outline-success"})
</div>