@model OnlineStore.Models.ViewModel.AccountInfoViewModel
@{
    ViewData["Title"] = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User information</h1>
<div class="row">
    <dl class="row">
        <dt class="col-sm-4">
            Surname
        </dt>
        <dd class="col-sm-10">
            @Model.Surname
        </dd>
        <dt class="col-sm-4">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-4">
            Account creation time
        </dt>
        <dd class="col-sm-10">
            @Model.CreationTime
        </dd>
        <dt class="col-sm-4">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        @if (Model.IsAdmin)
        {
            <dt class="col-sm-4">
                Admin page
            </dt>
            <dd class="col-sm-10">
                @Html.ActionLink("Admin page", "AdminProducts", "Admin", null, new {@class="btn btn-primary"})
            </dd>
        }
    </dl>
    <br>
    <hr>
    <div class="row">
        @Html.ActionLink("Purchases", "UserPurchases", "Account", null, new {@class="btn btn-link"})
        @* Todo: delete this *@
        @* <a asp-action="UserPurchases" class="btn btn-link">Purchases </a> *@
    </div>
</div>